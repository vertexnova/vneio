{
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.cStandard": "c17",
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/include",
        "${workspaceFolder}/src",
        "${workspaceFolder}/libs/vnecommon/include",
        "${workspaceFolder}/libs/vnelogging/include",
        "${workspaceFolder}/external/assimp/include"
    ],
    "cmake.configureOnOpen": false,
    "cmake.buildDirectory": "${workspaceFolder}/build/${buildType}",
    "cmake.preferredGenerators": [
        "Unix Makefiles",
        "Ninja",
        "Xcode"
    ],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.rulers": [80, 120, 150],
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 150,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },
    "files.associations": {
        "*.h": "cpp",
        "*.hpp": "cpp",
        "*.cpp": "cpp",
        "*.cc": "cpp",
        "*.cxx": "cpp",
        "*.c": "c",
        "*.cmake": "cmake",
        "CMakeLists.txt": "cmake"
    },
    "C_Cpp.clang_format_style": "file",
    "C_Cpp.clang_format_fallbackStyle": "Google",
    "clang-format.style": "file",
    "clang-format.fallbackStyle": "Google",
    "clang-format.executable": "clang-format",
    "clang-format.formatOnSave": true,
    "C_Cpp.codeAnalysis.clangTidy.enabled": true,
    "C_Cpp.codeAnalysis.clangTidy.path": "clang-tidy",
    "C_Cpp.codeAnalysis.runAutomatically": true,
    "search.exclude": {
        "**/build": true,
        "**/external": true,
        "**/libs": true,
        "**/.git": true,
        "**/node_modules": true,
        "**/bin": true,
        "**/lib": true
    },
    "files.exclude": {
        "**/build": true,
        "**/.git": true,
        "**/.vscode": false
    },
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.defaultProfile.linux": "bash",
    "files.encoding": "utf8",
    "files.eol": "\n",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.watcherExclude": {
        "**/build/**": true,
        "**/external/**": true,
        "**/libs/**": true,
        "**/.git/**": true
    },
    "C_Cpp.loggingLevel": "Warning",
    "[linux]": {
        "cmake.generator": "Unix Makefiles",
        "C_Cpp.default.intelliSenseMode": "linux-clang-x64",
        "C_Cpp.default.compilerPath": "g++"
    },
    "[osx]": {
        "cmake.generator": "Unix Makefiles",
        "C_Cpp.default.intelliSenseMode": "macos-clang-x64",
        "C_Cpp.default.compilerPath": "clang++"
    },
    "[windows]": {
        "cmake.generator": "Visual Studio 17 2022",
        "C_Cpp.default.intelliSenseMode": "windows-msvc-x64",
        "C_Cpp.default.compilerPath": "cl.exe"
    }
}
