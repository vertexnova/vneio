# EditorConfig is awesome: https://EditorConfig.org
# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{cpp,hpp,c,h}]
indent_size = 4
max_line_length = 120

[CMakeLists.txt]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.json]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.js]
indent_size = 2

[*.py]
indent_size = 4

[*.sh]
end_of_line = lf

[*.{cmd,bat}]
end_of_line = crlf

[*.ps1]
end_of_line = crlf

[*.xml]
indent_size = 2

[*.html]
indent_size = 2
